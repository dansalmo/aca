
<!-- hidden comment form template-->
<div id={{article_id|safe}} style="display: none; width: 600px;" >
	<h2>Comment on: {{title}}</h2>
	<form id={{comment_form|safe}} name={{comment_form|safe}}  action="#" method="post">
		<label for="user">By: {{user}}</label>
		<br />
		<label for={{comment_text|safe}} >Enter a comment</label>
		<textarea id={{comment_text|safe}} name={{comment_text|safe}} class="txtarea"></textarea>
		
		<button id={{publish_id|safe}} class="publish" >Publish comment</button>
	</form>
</div>
